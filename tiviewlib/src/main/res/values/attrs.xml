<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="radius" format="dimension" />
    <attr name="left_top_radius" format="dimension" />
    <attr name="right_top_radius" format="dimension" />
    <attr name="right_bottom_radius" format="dimension" />
    <attr name="left_bottom_radius" format="dimension" />

    <declare-styleable name="TiRoundImageView">

        <attr name="radius" />
        <attr name="left_top_radius" />
        <attr name="right_top_radius" />
        <attr name="right_bottom_radius" />
        <attr name="left_bottom_radius" />

        <attr name="add_scale" format="float" />
        <attr name="loading_icon" format="reference" />
        <attr name="loading_icon_width" format="dimension" />
        <attr name="loading_icon_height" format="dimension" />
        <attr name="loading_icon_background_fill_color" format="color" />
    </declare-styleable>

    <attr name="stroke_width" format="dimension" />
    <attr name="stroke_color" format="color" />

    <declare-styleable name="TiRoundLayout">
        <attr name="radius" />
        <attr name="left_top_radius" />
        <attr name="right_top_radius" />
        <attr name="right_bottom_radius" />
        <attr name="left_bottom_radius" />

        <attr name="stroke_width" />
        <attr name="stroke_color" />

        <attr name="clip_bg" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TiRoundImg">
        <attr name="radius" />
        <attr name="left_top_radius" />
        <attr name="right_top_radius" />
        <attr name="right_bottom_radius" />
        <attr name="left_bottom_radius" />

        <attr name="stroke_width" />
        <attr name="stroke_color" />
    </declare-styleable>


    <declare-styleable name="TiFitScrollView">
        <attr name="max_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TiWrapLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
        <attr name="gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TiWrapLayout_LayoutParams">
        <attr name="layout_gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TiViewPager">
        <attr name="scroll_enable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TiExpandableTextView">

        <!--保留的行数-->
        <attr name="ep_max_line" format="integer" />

        <!--是否需要展开，及其显示文字、颜色-->
        <attr name="ep_need_expand" format="boolean" />
        <attr name="ep_expand_text" format="string" />
        <attr name="ep_expand_color" format="color" />

        <!--是否需要收回，及其显示文字、颜色-->
        <attr name="ep_need_contract" format="boolean" />
        <attr name="ep_contract_text" format="string" />
        <attr name="ep_contract_color" format="color" />

        <!--是否需要对链接进行处理，及其显示文字、颜色-->
        <attr name="ep_need_link" format="boolean" />
        <attr name="ep_link_color" format="color" />
        <attr name="ep_link_res" format="reference" />
        <!--是否需要将连接转换成网页链接显示 默认为true-->
        <!--<attr name="ep_need_convert_url" format="boolean" />-->

        <!--是否需要@用户，及其颜色-->
        <attr name="ep_need_mention" format="boolean" />
        <attr name="ep_mention_color" format="color" />

        <!--是否需要自定义规则，及其颜色-->
        <attr name="ep_need_self" format="boolean" />
        <attr name="ep_self_color" format="color" />

        <!-- 在收回和展开前面添加的内容的字体颜色 -->
        <attr name="ep_end_color" format="color" />

        <!--是否需要展开和收回的动画-->
        <attr name="ep_need_animation" format="boolean" />

        <!--是否需要永远将展开放置在最右边-->
        <attr name="ep_need_expand_always_show_right" format="boolean" />
        <!--是否需要永远将收回放置在最右边-->
        <attr name="ep_need_contract_always_show_right" format="boolean" />

    </declare-styleable>


    <declare-styleable name="TiDotRadioButton">

        <attr name="show_dot" format="boolean" />
        <attr name="dot_radius" format="dimension" />
        <attr name="dot_margin_top" format="dimension" />
        <attr name="dot_margin_right" format="dimension" />
        <attr name="dot_color" format="color" />

    </declare-styleable>

</resources>
